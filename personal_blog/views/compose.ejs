<%- include("partials/header") -%>
    <h1>Compose</h1>
    <form class="" action="/compose" method="post">

        <div class="form-group">
            <label class="form-check-label">Title</label>
            <input class="form-control" type="text" name="postTitle" placeholder="Write your Post Title">
        </div>

        <div class="form-group">
            <label class="form-check-label">Post</label>
            <textarea class="form-control" rows="8" cols="50" name="postMessage" placeholder="Write your Post Message"></textarea>
        </div>

        <button class="btn btn-primary" type="submit" name="button">Publish</button>
    </form>
<%- include("partials/footer") -%>